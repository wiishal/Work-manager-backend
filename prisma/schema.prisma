generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User{
  id          Int @id @default(autoincrement())
  username    String @unique
  password    String
  lists       String[]
  tags        String[]
  Tasks       Task[]
  ExpensesCard    ExpenseCard[]
}

model Task{
  id          Int @id @default(autoincrement())

  User        User @relation(fields: [userId], references: [id])
  userId      Int 

  title       String
  taskDescription     String
  date        String
  complete    Boolean @default(false)
  list        String[]
  tags        String[]
  Subtask     Subtask[]

}

model Subtask{
  id          Int @unique @default(autoincrement())

  task        Task @relation(fields: [taskId],references: [id])
  taskId      Int
  
  detail      String
  complete    Boolean @default(false)
}

model ExpenseCard{
  id         Int @unique @default(autoincrement())
  name       String
  user       User @relation(fields: [userId],references: [id])
  userId     Int
  expenses   Expenses[]
  createdAt  DateTime @default(now())
}

model Expenses{
  id          Int @unique @default(autoincrement())
  details     String
  expenseCard ExpenseCard @relation(fields: [expenseCardId],references: [id])
  expenseCardId Int

  createdAt   DateTime @default(now())
}